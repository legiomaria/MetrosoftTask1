@model List<MetrosoftSearch.Mvc.Dtos.SearchResultDto>
<head>
    <link href="~/css/custom.css" rel="stylesheet" />
</head>
<h2 class="results-header">Search Results</h2>

<table class="results-table">
    <thead>
        <tr>
            <th>Search Phrase</th>
            <th>URL</th>
            <th>Positions</th>
            <th>Found</th>
            <th>Search Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var result in Model)
        {
            <tr>
                <td>@result.SearchPhrase</td>
                <td>@result.Url</td>
                <td>@result.Positions</td>
                <td>@(result.IsFound ? "Yes" : "No")</td>
                <td>@result.SearchDate</td>
            </tr>
        }
    </tbody>
</table>
<div class="back-button-container">
    <a href="@Url.Action("Index", "Search")" class="back-button">Back to Search</a>
</div>